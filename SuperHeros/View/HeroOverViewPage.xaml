<Page x:Class="SuperHeros.View.HeroOverViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SuperHeros.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HeroOverViewPage"
      Background="Gray">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <!-- First Row -->
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
            <!-- Second Row -->
            <RowDefinition Height="40" />
            <!-- Third Row -->
        </Grid.RowDefinitions>

        <!-- First Row - Title -->
        <TextBlock Grid.Row="0" Text="Title" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" />

        <!-- Second Row - Two Columns -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350" />
                <!-- Left Column -->
                <ColumnDefinition Width="200" />
                <!-- Right Column -->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Column Content -->
            <TextBlock Grid.Column="0" Text="pictures" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" />

            <!-- Right Column Content -->
            <TextBlock Grid.Column="1" Text="names" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" />

            <TextBlock Grid.Column="2" Text="DC/MARVEL info" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" />

        </Grid>

        <!-- Third Row - Button -->
    </Grid>
</Page>

